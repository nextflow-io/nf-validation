{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/nextflow-io/nf-validation/master/plugins/nf-validation/src/testResources/schema_input.json",
  "title": "Samplesheet validation schema",
  "description": "Schema for the samplesheet used in this pipeline",
  "type": "object",
  "properties": {
    "field_1": {
      "type": "string",
      "meta": ["string1", "string2"],
      "default": "value",
      "dependentRequired": ["field_2", "field_3"]
    },
    "field_2": {
      "type": "integer",
      "meta": ["integer1", "integer2"],
      "default": 5
    },
    "field_3": {
      "type": "boolean",
      "meta": ["boolean1", "boolean2"],
      "default": true
    },
    "field_4": {
      "type": "string"
    },
    "field_5": {
      "type": "number"
    },
    "field_6": {
      "type": "boolean"
    },
    "field_7": {
      "type": "string",
      "format": "file-path",
      "exists": true,
      "pattern": "^.*\\.txt$"
    },
    "field_8": {
      "type": "string",
      "format": "directory-path",
      "exists": true
    },
    "field_9": {
      "type": "string",
      "format": "path",
      "exists": true
    },
    "field_10": {
      "type": "string",
      "unique": true
    },
    "field_11": {
      "type": "integer",
      "unique": ["field_10"]
    },
    "field_12": {
      "type": "string",
      "default": "itDoesExist"
    }
  },
  "required": ["field_4", "field_5", "field_6"]
}
